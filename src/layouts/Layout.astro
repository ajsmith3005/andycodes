---
import BubbleBackground from "../components/Bubble-background.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const pageName = Astro.props.pageName;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Knewave&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<script src="../scripts/scripts.js"></script>
		<title>Andy Codes</title>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-C2FR9Q4JXN"></script>
		<script>
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());
  
		  gtag('config', 'G-C2FR9Q4JXN');
		</script>
	</head>
	<body class={pageName}>
		<BubbleBackground />
		<Header />
			<main>
				<slot />
			</main>
		<Footer />
	</body>
</html>

<style lang="scss">
	@use '../styles/global-abstracts' as *;

	html,
	body {
		margin: 0;
		color: $color-contrast-dark;
	}
</style>
