<style lang="scss">
	@use '../styles/_global-abstracts.scss' as *;

	body.is-page-home .header-container {
		display: flex;
		background-color: transparent;
		position: absolute;
	}

	.header-container {
		display: flex;
		justify-content: center;
		position: relative;
		background-color: $color-contrast-dark;
		width: 100%;
	}
	
	.site-header {
		width: 100%;
		max-width: $extra-wide-size;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: $spacing-20 $global-padding;

		ul {
			display: flex;
			gap: $spacing-10;
			margin: 0;
			padding: 0;
	
			li {
				list-style-type: none;
			}
		}

	}
</style>