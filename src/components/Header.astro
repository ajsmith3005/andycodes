---
import Logo from '../../public/logo.svg';
---

<header class="header-container">
	<div class="site-header">
		<a href="/"><img class="logo-menu" src={Logo.src} alt="logo"></a>
		<div class="main-nav-toggle is-style-show-mobile">
			<svg class="main-nav-toggle-button main-nav-toggle-open" id="Layer_1" version="1.1" viewBox="0 0 32 32" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path fill="#ffffff" d="M4,10h24c1.104,0,2-0.896,2-2s-0.896-2-2-2H4C2.896,6,2,6.896,2,8S2.896,10,4,10z M28,14H4c-1.104,0-2,0.896-2,2  s0.896,2,2,2h24c1.104,0,2-0.896,2-2S29.104,14,28,14z M28,22H4c-1.104,0-2,0.896-2,2s0.896,2,2,2h24c1.104,0,2-0.896,2-2  S29.104,22,28,22z"/></svg>
			<svg class="main-nav-toggle-button main-nav-toggle-close" viewBox="0 0 16 16" width="16" xmlns="http://www.w3.org/2000/svg"><polygon fill-rule="evenodd" fill="#ffffff" points="8 9.414 3.707 13.707 2.293 12.293 6.586 8 2.293 3.707 3.707 2.293 8 6.586 12.293 2.293 13.707 3.707 9.414 8 13.707 12.293 12.293 13.707 8 9.414"/></svg>
		</div>
		<div class="main-nav">
			<ul>
				<li><a class="is-style-uppercase" href="/example/">Example</a></li>
				<li><a class="is-style-uppercase" href="/example/">Example</a></li>
				<li><a class="is-style-uppercase" href="/example/">Example</a></li>
			</ul>
		</div>
	</div>
</header>

<style lang="scss">
	@use '../styles/_global-abstracts.scss' as *;

	body.is-page-home .header-container {
		display: flex;
		background-color: transparent;
		position: absolute;
	}

	.header-container {
		display: flex;
		justify-content: center;
		position: relative;
		background-color: $color-contrast-dark;
		width: 100%;
	}
	
	.site-header {
		width: 100%;
		max-width: $extra-wide-size;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: $spacing-10 $global-padding;

		.logo-menu {
			height: clamp(3.5rem, 3.088rem + 1.88vw, 4.5rem);
		}

		.main-nav-toggle {
			display: none;
			color: $color-contrast-light;
			z-index: 100;
		}
		
		.main-nav-toggle-close {
			display: none;
		}

		ul {
			display: flex;
			gap: $spacing-20;
			margin: 0;
			padding: 0;
		}

		li a {
			font-weight: bold;
			text-decoration: none;
			text-transform: uppercase;
			color: black;
			color: white;
			font-size: 1rem;
			transition: .3s;

			&:hover:not(.active) {
				color: $color-accent-1;
				cursor: pointer;
			}
		}

		li {
			list-style-type: none;
		}
	}
</style>