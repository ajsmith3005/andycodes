<style lang="scss">
	@use '../styles/_global-abstracts.scss' as *;

	.hero-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: $spacing-20;
		height: 100vh;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;

		.hero-text {
			text-align: center;

			h1 {
				margin: 0.25em 0;
				line-height: 1em;				
			}
			
			p {
				font-size: $font-size-lg;
				font-weight: 600;
				margin: 0;
				line-height: 1em;
				color: $color-accent-2;
			}

		}
		
		.read-more {
			width: clamp(3.438rem, 2.896rem + 2.71vw, 5.438rem);
			height: clamp(3.438rem, 2.896rem + 2.71vw, 5.438rem);

			path {
				fill: $color-contrast-light;
			}
		}
	}


	.drip-section-transition {
		fill: $color-base-1;
	}

	.is-style-color-base-1 {
		fill: $color-base-1;
		background-color: $color-base-1;
	}

	.parent {
		width: 100%;
		// height: 100vh;
		display: grid;
		grid-template-columns: $global-padding clamp(9.688rem, 2.983rem + 33.52vw, 28.125rem) repeat(2, 1fr);
		grid-template-rows: 1fr;
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}

	
	.div1 { 
		grid-area: 1 / 1 / 3 / 2; 
		background-color: transparent;
		display: flex;
		flex-direction: column;
		padding-top: 50%;
		align-items: last baseline;
		
		.drip-left {
			width: 100%;
			aspect-ratio: 1 / 1;
			border-radius: 50% 50% 0 0;
		}
		
		.under-drip-left {
			margin-top: -1px;
			// border-radius: 50% 50% 0 0;
			flex: 1 1 1px;
			align-self: stretch;
		}
	}
	
	.div2 { 
		grid-area: 1 / 2 / 2 / 3; 
		background-color: transparent;
	}
	
	.div3 { 
		grid-area: 1 / 3 / 2 / 6;
		display: flex;
		align-items: last baseline;
		background-color: transparent;
	}
	
	.div4 { 
		grid-area: 2 / 2 / 3 / 5; 
		background-color: transparent;
		margin-top: -1px;
		display: grid;
		grid-template-columns: clamp(9.688rem, 2.983rem + 33.52vw, 28.125rem) repeat(2, 1fr);
		grid-auto-rows: fit-content;
		justify-items: start;

		.profile-image-container {
			width: 100%;
			grid-area: 1 / 1 / 2 / 2;
			align-self: start;
			display: block;
			background-color: transparent;
			
			.andy {
				width: 100%;
				object-fit: cover;
				align-self: last baseline;
				border-radius: 100%;
				margin-bottom: -50%;
			}

			.under-profile-image {
				width: 100%;
				aspect-ratio: 2 / 1;
			}	
		}
	
		.about-me {
			grid-area: 1 / 2 / 3 / 4;
			background-color: $color-base-1;
			padding-left: $spacing-30;
			padding-right: $global-padding;
		}

		.grid-filler {
			grid-area: 2 / 1 / 4 / 2;
			background-color: $color-base-1;
			width: 100%;
			height: 100%;
		}
	}

	.drip-right {
		display: block;
	}

	.drip-right-small {
		display: none;
	}

	@media screen and (max-width: 780px) {
		.div4 { 

			.about-me {
				grid-area: 2 / 1 / 3 / 4;
				padding-left: 0;
			}

			.grid-filler {
				grid-area: 1 / 2 / 2 / 4;
			}
		}

		.drip-right {
			display: none;
		}

		.drip-right-small {
			display: block;
		}
	}

</style>
